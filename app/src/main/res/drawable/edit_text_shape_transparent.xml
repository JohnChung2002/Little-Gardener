<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/alpha_gray"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/transparent"
                android:centerX="0.98"
                android:endColor="@color/alpha_black"
                android:startColor="@color/transparent" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="@color/transparent"
                android:centerX="0.98"
                android:endColor="@color/alpha_black"
                android:startColor="@color/transparent" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/transparent"
                android:centerY="0.1"
                android:endColor="@color/transparent"
                android:startColor="@color/alpha_black" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="@color/transparent"
                android:centerY="0.1"
                android:endColor="@color/transparent"
                android:startColor="@color/alpha_black" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>